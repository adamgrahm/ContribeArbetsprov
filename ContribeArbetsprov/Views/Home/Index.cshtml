@*@model IEnumerable<ContribeArbetsprov.Models.IBookstoreService>*@
<div>
    <h1>Bookstore</h1>
    @Html.ActionLink("Go to cart", "GoToCart", "Home", null, new { @class = "btn btn-lg btn-default", @style = "float:right;"})
    
</div>
<hr />
<div>
    @using (Html.BeginForm("ReturnBooks", "Home", FormMethod.Get))
    {
        <div class="form-group">
            <label>Search for a booktitle or an author</label><br />
            <label style="color:red;">Empty the field and hit search to get all books</label>
            <input type="text" placeholder="Search..." class="form-control" name="searchString" />
            
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-sm btn-info" value="Search!" />
        </div>
    }
    <hr />
        
</div>
<div id="BookSite">
    @Html.Partial("Books")
</div>